using System;
using System.Collections.Generic;
using System.Linq; // Necesario para el método Reverse() si se usara con colecciones no List<T>

public class NumerosInversos
{
    public static void Main(string[] args)
    {
        // 1. Almacenar los números del 1 al 10 en una lista
        List<int> numeros = new List<int>();

        for (int i = 1; i <= 10; i++)
        {
            numeros.Add(i);
        }

        Console.WriteLine("--- Números en orden inverso ---");

        // 2. Mostrar los números por pantalla en orden inverso, separados por comas.
        // Opción 1: Recorrer la lista en sentido inverso con un bucle for
        for (int i = numeros.Count - 1; i >= 0; i--)
        {
            Console.Write(numeros[i]); // Imprime el número actual

            // Si no es el último elemento, imprime una coma y un espacio
            if (i > 0)
            {
                Console.Write(", ");
            }
        }
        Console.WriteLine(); // Añade un salto de línea al final

